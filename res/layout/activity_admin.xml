 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@android:color/holo_blue_dark"
    
    tools:context="cn.czl.history.today.activity.AdminActivity" >

     <TextView
        android:id="@+id/upload_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
         
        android:text="上传进度" />

    <Button
        android:id="@+id/buttons1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="上传当日日志" />

    <Button
        android:id="@+id/buttons2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons1"
        android:layout_centerHorizontal="true"
        android:text="上传全部日志" />
    <Button
        android:id="@+id/buttons3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons2"
        android:layout_centerHorizontal="true"
        android:text="上传全部错误日志" />

    <Button
        android:id="@+id/buttons4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons3"
        android:layout_centerHorizontal="true"
        android:text="返回" />

</RelativeLayout>
 